{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,

    "baseUrl": "src",
    "paths": {
      "app/*": ["app/*"],
      "components/*": ["components/*"],
      "features/*": ["features/*"],
      "styles/*": ["styles/*"],
      "lib/*": ["lib/*"]
    },

    "types": ["react", "react-dom"]
  },
  "include": ["src"]
}
